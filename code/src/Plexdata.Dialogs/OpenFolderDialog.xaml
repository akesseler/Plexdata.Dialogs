<Window x:Class="Plexdata.Dialogs.OpenFolderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Plexdata.Dialogs"
        mc:Ignorable="d"
        Title="Open Folder" 
        MinHeight="600" 
        MaxHeight="600" 
        MinWidth="450"
        MaxWidth="450"
        ResizeMode="NoResize"
        ShowInTaskbar="False" 
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight">
    <DockPanel>
        <Border
            DockPanel.Dock="Bottom"
            Padding="25,15"
            Background="Transparent">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" >
                    <Button Margin="5,0,0,0" Width="70" Content="Open" IsDefault="True" Click="OnDialogButtonClick"/>
                    <Button Margin="5,0,0,0" Width="70" Content="Cancel" IsCancel="True" Click="OnDialogButtonClick"/>
                </StackPanel>
            </Grid>
        </Border>
        <DockPanel Margin="25,25,25,0">
            <ScrollViewer
                DockPanel.Dock="Top"
                MaxHeight="100"
                Margin="0,0,0,15"
                VerticalScrollBarVisibility="Auto" 
                Visibility="{Binding IsMessageVisible, Mode=OneWay}">
                <TextBlock 
                    TextWrapping="WrapWithOverflow"
                    Text="{Binding Message, Mode=OneWay}"/>
            </ScrollViewer>
            <TreeView
                x:Name="folderTreeView"
                ItemsSource="{Binding RootFolders}"
                BorderBrush="LightGray">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type local:FolderEntry}" ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <Image Source="{Binding Image, Mode=OneWay}" Margin="0,0,5,0"  />
                            <TextBlock Text="{Binding Label, Mode=OneWay}" Margin="0,0,4,0" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>
        </DockPanel>
    </DockPanel>
</Window>
